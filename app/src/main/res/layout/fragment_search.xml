<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#E9ECEF">

    <EditText
        android:id="@+id/et_search_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ჩაწერეთ საძიებო სიტყვა..."
        android:background="@android:drawable/editbox_background"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:padding="12dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_header_lectures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ნაპოვნი ლექციები"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_marginBottom="8dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_search_lectures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tv_header_tasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ნაპოვნი დავალებები"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_marginBottom="8dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_search_tasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>